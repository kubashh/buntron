{
  "name": "myapp",
  "version": "0.1.0",
  "main": "core/main.ts",
  "scripts": {
    "lightbuild": "tsc -p core",
    "dev": "bun lightbuild && bun dev.ts",
    "build": "NODE_ENV=production bun lightbuild && wdwh build && electron-builder",
    "testbuild": "bun run build && ./dist/linux-unpacked/myapp",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "MyApp",
    "files": "**/*",
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "wdwh": "^1.4.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/node": "^24.7.2",
    "execa": "^9.6.0",
    "electron": "^37.7.0",
    "electron-builder": "^26.0.12"
  },
  "peerDependencies": {
    "typescript": "latest"
  }
}
